{
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "./dist"
    },
    "include": [
        "src/**/*.ts",
        "../src/types.ts",
        "../src/config/**/*.ts",
        "../functions/src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "src/scripts",
        "src/__tests__",
        "../functions/src/scripts"
    ]
}