rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- HELPERS ---
    
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }
    
    function hasRole(role) {
      return isAuthenticated() && getUserData().role == role;
    }
    
    function isAdmin() {
      return isAuthenticated() && (
        getUserData().role == 'admin' || 
        getUserData().role == 'super-admin' || 
        getUserData().isAdmin == true
      );
    }
    
    function isOwner(venueData) {
      return isAuthenticated() && request.auth.uid == venueData.ownerId;
    }
    
    function isManager(venueData) {
      return isAuthenticated() && (request.auth.uid in venueData.managerIds);
    }

    // --- RULES ---

    // Users: Publicly readable for leaderboards/ranks.
    match /users/{userId} {
      allow read: if true; 
      allow create: if isAuthenticated() && request.auth.uid == userId &&
                    !request.resource.data.keys().hasAny(['role', 'isAdmin', 'systemRole']);
      allow update: if isAuthenticated() && (isAdmin() || (request.auth.uid == userId &&
                    !request.resource.data.diff(resource.data).affectedKeys().hasAny(['role', 'isAdmin', 'systemRole'])));
    }

    // Venues: Publicly readable. Writes restricted to Admins, Owners, and Managers.
    match /venues/{venueId} {
      allow read: if true;
      allow write: if isAdmin() || isOwner(resource.data) || isManager(resource.data);

      // Private Data Sub-collection: Restricted to authorized personnel only.
      // We look up the parent venue document to check ownership/management roles.
      match /private_data/{docId} {
        allow read, write: if isAdmin() || 
                           isOwner(get(/databases/$(database)/documents/venues/$(venueId)).data) || 
                           isManager(get(/databases/$(database)/documents/venues/$(venueId)).data);
      }
    }

    // Signals: Users can read their own signals. Admins can read all. 
    // Writes are STRICTLY PROHIBITED for all roles (handled by backend API).
    match /signals/{signalId} {
      allow read: if isAuthenticated() && (request.auth.uid == resource.data.userId || isAdmin());
      allow write: if false;
    }

    // Default deny for all other collections
    match /{document=**} {
      allow read, write: if isAdmin();
    }
  }
}
